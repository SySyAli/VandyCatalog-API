{
	"compilerOptions": {
		"target": "es6",
		"module": "commonjs",
		"outDir": "dist",
		"rootDir": "src",
		"strict": false,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"moduleResolution": "node",
		"strictNullChecks": true
	},
	"include": ["src/**/*", ".eslintrc"],
	"exclude": ["node_modules", ".vscode"]
}
